let {latexToSpeech} = require('./latex-to-speech.js');

//
//  Get the command-line arguments
//
var argv = require('yargs')
    .demand(1)
    .usage('$0 [SRE options] "math"').argv
;


var options = Object.assign({}, argv);
delete options._;
delete options['$0'];

const run = function() {
  latexToSpeech(argv._, options);
};
run();
